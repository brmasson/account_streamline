<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <report id="account_streamline.remittance_letter" name="account_streamline.remittance_letter"
            auto="False" model="account.voucher"
            file="account_streamline/report/remittance_letter.mako" string="Remittance Letter"
            attachment="'AR-' + object.name" report_type="webkit"
            attachment_use="True" usage="default" />

        <!-- If the webkit header is not defined, associate it with Remittance Letter 
            reports via Settings > Technical > Actions > Reports > Remittance Letter > Webkit.

            It is recommended the title of the header is the following:
                ${ title(object) }

            That way, it will be dynamically replaced by "Suggestion Payment" or "Remittance 
            Letter" depending on whether the voucher has been posted. -->

    </data>
</openerp>
