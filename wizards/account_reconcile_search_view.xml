<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_streamline_filter" model="ir.ui.view">
            <field name="name">account.streamline.filter</field>
            <field name="model">account.streamline.reconcile_filter</field>
            <field name="arch" type="xml">
                <form string="Search" version="7.0">
                    <group col="4" string="Filter By">
                        <field name="filter_type" on_change="onchange_filter(filter_type)"/>
                        <field name="search_type" invisible="True"/>
                    </group>
                    <group string="Range" attrs="{'invisible':[('search_type', '=','empty')]}">
                        <group attrs="{'invisible':[('search_type','!=','account_id')]}">
                            <field name="account_from" widget="selection"/>
                            <field name="account_to" widget="selection"/>
                        </group>
                        <group attrs="{'invisible':[('search_type','!=','date')]}">
                            <field name="dateField_from"/>
                            <field name="dateField_to"/>
                        </group>
                        <group attrs="{'invisible':[('search_type','!=','journal_id')]}">
                            <field name="journal_from" widget="selection"/>
                            <field name="journal_to" widget="selection"/>
                        </group>
                    </group>
		    <footer>
                        <button string="Search"
                                name="launch_search"
                                type="object"
                                default_focus="1"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel"
                                class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_account_streamline_filter"
                model="ir.actions.act_window">
            <field name="name">Filter View</field>
            <field name="res_model">account.streamline.reconcile_filter</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_streamline_filter" />
            <field name="target">new</field>
        </record>
    </data>
</openerp>
