<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_numergy_filter" model="ir.ui.view">
            <field name="name">account.numergy.filter</field>
            <field name="model">account.numergy.reconcile_filter</field>
            <field name="arch" type="xml">
                <form string="Search" version="7.0">
                    <group col="4" string="Filter By">
                        <field name="field_filter" domain="[('model_id','=','account.move.line'),('ttype','!=','one2many'),('ttype','!=','many2many')]"/>
                    </group>
                    <group string="Range">
                        <group>
                            <field name="id_from" />
                            <field name="id_to" />
                        </group>
                    </group>
                    <footer>
                        <button string="Search"
                                name="launch_search"
                                type="object"
                                default_focus="1"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel"
                                class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_account_numergy_filter"
                model="ir.actions.act_window">
            <field name="name">Filter View</field>
            <field name="res_model">account.numergy.reconcile_filter</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_numergy_filter" />
            <field name="target">new</field>
        </record>
    </data>
</openerp>
