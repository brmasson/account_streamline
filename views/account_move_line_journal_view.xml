<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_journal_tree_global" model="ir.ui.view">
            <field name="name">view.move.line.tree.inherits</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree string="Journal Items" editable="bottom" create="false" version="7.0">
                    <field readonly="1" name="state"/>
                    <field readonly="1" name="partner_id" invisible="context.get('complete_view', True) and context.get('analytic_view', True) and context.get('item_complete_view', True) and context.get('item_analytic_view', True) and context.get('item_simple_view', True)" />
                    <field readonly="1" name="period_id"/>
                    <field readonly="1" name="journal_id" invisible="context.get('complete_view', True) and context.get('simple_view', True) and context.get('item_complete_view', True) and context.get('item_analytic_view', True) and context.get('item_simple_view', True)" />
                    <field readonly="1" name="internal_sequence_number" invisible="context.get('complete_view', True) and context.get('item_complete_view', True)" />
                    <field readonly="1" name="ref"/>
                    <field readonly="1" name="date" invisible="context.get('analytic_view', True)"/>
                    <field readonly="1" name="date_maturity" invisible="context.get('complete_view', True) and context.get('item_complete_view', True)" />
                    <field readonly="1" name="date_created" invisible="context.get('complete_view', True) and context.get('item_complete_view', True)" />
                    <field readonly="1" name="invoice"/>
                    <field readonly="1" name="account_id"/>
                    <field readonly="1" name="name"/>
                    <field readonly="1" name="narration"/>
                    <field readonly="1" name="debit_curr" sum="Total Debit T"/>
                    <field readonly="1" name="credit_curr" sum="Total Credit T"/>
                    <field readonly="1" name="currency_id" invisible="context.get('complete_view', True) and context.get('simple_view', True) and context.get('item_complete_view', True) and context.get('item_simple_view', True)" />
                    <field readonly="1" name="debit" sum="Total Debit" invisible="context.get('complete_view', True) and context.get('simple_view', True) and context.get('item_complete_view', True) and context.get('item_simple_view', True)" />
                    <field readonly="1" name="credit" sum="Total Credit" invisible="context.get('complete_view', True) and context.get('simple_view', True) and context.get('item_complete_view', True) and context.get('item_simple_view', True)" />
                    <field readonly="1" name="account_tax_id" invisible="context.get('complete_view', True) and context.get('analytic_view', True) and context.get('item_complete_view', True) and context.get('item_analytic_view', True) and context.get('item_simple_view', True)" />
                    <field readonly="1" name="a1_id"/>
                    <field readonly="1" name="a2_id"/>
                    <field readonly="1" name="a3_id"/>
                    <field readonly="1" name="a4_id"/>
                    <field readonly="1" name="a5_id"/>
                </tree>
            </field>
        </record>
        <record id="action_move_line_accounting_items_complete_tree"
                model="ir.actions.act_window">
            <field name="name">Full View</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_journal_tree_global"/>
            <field name="context">{'item_complete_view':False, 'model_id':'account_move_line', 'filter_wizard_action':'action_view_advanced_filter_journal'}</field>
            <field name="view_mode">tree_advanced_filter</field>
            <field name="search_view_id" ref="view_move_line_search_global"/>
        </record>

        <record id="action_move_line_accounting_items_simple_tree"
                model="ir.actions.act_window">
            <field name="name">Simple View</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_journal_tree_global"/>
            <field name="context">{'item_simple_view':False, 'model_id':'account_move_line', 'filter_wizard_action':'action_view_advanced_filter_journal'}</field>
            <field name="view_mode">tree_advanced_filter</field>
            <field name="search_view_id" ref="view_move_line_search_global"/>
        </record>

        <record id="action_move_line_accounting_items_analytic_tree"
                model="ir.actions.act_window">
            <field name="name">Analytical View</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_journal_tree_global"/>
            <field name="context">{'item_analytic_view':False, 'model_id':'account_move_line', 'filter_wizard_action':'action_view_advanced_filter_analytic'}</field>
            <field name="view_mode">tree_advanced_filter</field>
            <field name="search_view_id" ref="view_move_line_search_global"/>
        </record>
    </data>
</openerp>
