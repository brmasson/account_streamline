<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_journal_tree_global" model="ir.ui.view">
            <field name="name">view.move.line.tree.inherits</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree string="Journal Items" create="false" version="7.0" editable="bottom">
                   <field name="a1_id" position="after"/>
                   <field name="a2_id" position="after"/>
                   <field name="a3_id" position="after"/>
                   <field name="a4_id" position="after"/>
                   <field name="a5_id" position="after"/>
                </tree>
            </field>
        </record>

        <record id="action_move_line_accounting_items_complete_tree"
                model="ir.actions.act_window">
            <field name="name">Full View</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_journal_tree_global"/>
            <field name="context">{'item_complete_view':False, 'filter_wizard':'journal'}</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Select the period and the journal you want to fill.
                </p>
            </field>
        </record>

        <record id="action_move_line_accounting_items_simple_tree"
                model="ir.actions.act_window">
            <field name="name">Simple View</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_journal_tree_global"/>
            <field name="context">{'item_simple_view':False, 'filter_wizard':'journal'}</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Select the period and the journal you want to fill.
                </p>
            </field>
        </record>

        <record id="action_move_line_accounting_items_analytic_tree"
                model="ir.actions.act_window">
            <field name="name">Analytical View</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_journal_tree_global"/>
            <field name="context">{'item_analytic_view':False, 'filter_wizard':'journal'}</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Select the period and the journal you want to fill.
                </p>
            </field>
        </record>
    </data>
</openerp>
