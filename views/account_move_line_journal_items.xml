<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_move_line_tree_global" model="ir.ui.view">
            <field name="name">account.move.line.tree.global</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree string="Journal Items" create="false" version="7.0">
                    <field name="state"/>
                    <field name="partner_id" invisible="context.get('complete_view', True) and context.get('analytic_view', True)" />
                    <field name="period_id"/>
                    <field name="journal_id" invisible="context.get('complete_view', True) and context.get('simple_view', True)" />
                    <field name="internal_sequence_number" invisible="context.get('complete_view', True)" />
                    <field name="ref"/>
                    <field name="date"/>
                    <field name="date_maturity" invisible="context.get('complete_view', True)" />
                    <field name="date_created" invisible="context.get('complete_view', True)" />
                    <field name="invoice"/>
                    <field name="account_id"/>
                    <field name="name"/>
                    <field name="narration"/>
                    <field name="debit_curr"/>
                    <field name="credit_curr"/>
                    <field name="currency_id" invisible="context.get('complete_view', True) and context.get('simple_view', True)" />
                    <field name="debit" invisible="context.get('complete_view', True) and context.get('simple_view', True)" />
                    <field name="credit" invisible="context.get('complete_view', True) and context.get('simple_view', True)" />
                    <field name="account_tax_id" invisible="context.get('complete_view', True) and context.get('analytic_view', True)" />
                    <field name="a1_id" invisible="context.get('analytic_view', True)" />
                    <field name="a2_id" invisible="context.get('analytic_view', True)" />
                    <field name="a3_id" invisible="context.get('analytic_view', True)" />
                    <field name="a4_id" invisible="context.get('analytic_view', True)" />
                    <field name="a5_id" invisible="context.get('analytic_view', True)" />
                </tree>
            </field>
        </record>

        <record id="view_account_numergy_move_line_tree_reconcile" model="ir.ui.view">
            <field name="name">account.numergy.move.line.tree.reconciliation</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree_account_numergy_reconciliation colors="red:state == 'draft';black:state == 'valid'"
                                             string="Lettrage Ecritures Compatble"
                                             create="false"
                                             version="7.0">
                    <field name="state" />
                    <field name="period_id" />
                    <field name="ref" />
                    <field name="invoice" />
                    <field name="account_id" />
                    <field name="name" />
                    <field name="narration" />
                    <field name="date" />
                    <field name="debit_curr" />
                    <field name="credit_curr" />
                    <field name="currency_id" />
                    <field name="debit" />
                    <field name="credit" />
                    <field name="move_state" />
                    <field name="reconcile_id" />
                    <field name="reconcile_partial_id" />

                </tree_account_numergy_reconciliation>
            </field>
        </record>

        <record id="view_move_line_search_global" model="ir.ui.view">
            <field name="name">Journal - Search</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <search string="Journal Search">
                    <field name="account_id" />
                    <field name="period_id" />
                    <field name="journal_id" />
                    <field name="internal_sequence_number" />
                    <field name="analytic_account_id"
                           invisible="context.get('analytic_journal', True)" />
                    <field name="reconcile_id"
                           invisible="context.get('reconcile_journal', True)" />
                </search>
            </field>
        </record>

        <record id="action_move_line_tree_complete" model="ir.actions.act_window">
            <field name="name">Vue Complete</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_move_line_tree_global"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{'complete_view':False}</field>
            <field name="search_view_id" ref="view_move_line_search_global"/>
        </record>

        <record id="action_move_line_tree_simple" model="ir.actions.act_window">
            <field name="name">Vue Simple</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_move_line_tree_global"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{'simple_view':False}</field>
            <field name="search_view_id" ref="view_move_line_search_global"/>
        </record>

        <record id="action_move_line_tree_analytic" model="ir.actions.act_window">
            <field name="name">Vue Analytique</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_move_line_tree_global"/>
            <field name="context">{'analytic_view':False}</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_move_line_search_global"/>
        </record>

        <record id="action_move_line_tree_reconciliation" model="ir.actions.act_window">
            <field name="name">Ecritures Lettrage</field>
            <field name="res_model">account.move.line</field>
            <field name="view_id" ref="view_account_numergy_move_line_tree_reconcile"/>
            <field name="view_mode">tree_account_numergy_reconciliation</field>
            <field name="context">{'reconcile_view':False}</field>
            <field name="help" type="html">
                <p>
                    No journal items found.
                </p>
            </field>
        </record>

        <menuitem id="menu_finance_entries"
                  name="Ecritures Comptable"
                  sequence="5"
                  parent="account.menu_finance"
                  groups="account.group_account_user,account.group_account_manager" />

        <menuitem
            action="action_move_line_tree_complete"
            id="menu_action_account_move_line_complete"
            parent="menu_finance_entries"
            sequence="12"
            groups="account.group_account_user"
        />

        <menuitem
            action="action_move_line_tree_simple"
            id="menu_action_account_move_line_simple"
            parent="menu_finance_entries"
            sequence="13"
            groups="account.group_account_user"
        />

        <menuitem
            action="action_move_line_tree_analytic"
            id="menu_action_account_move_line_analytic"
            parent="menu_finance_entries"
            sequence="14"
            groups="account.group_account_user"
        />

        <menuitem
            action="action_move_line_tree_reconciliation"
            id="menu_action_account_move_line_reconcile"
            parent="menu_finance_entries"
            sequence="15"
            groups="account.group_account_user"
        />
    </data>
</openerp>
